FROM python:3.12-slim-bookworm
RUN apt-get update \
    && apt-get install -y --no-install-recommends build-essential gcc libffi-dev python3-dev \
    && rm -rf /var/lib/apt/lists/*
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV DJANGO_MODULES_SETTINGS=backend.settings
ENV DEBUG=True
WORKDIR /app
# Copy requirements from monolith (context is ./apps/backend)
COPY monolith/requirements.txt .
RUN pip install --upgrade pip && pip install --no-cache-dir -r requirements.txt
# Copy monolith code
COPY monolith/ /app/
# Copy core hexagonal architecture modules
COPY core/ /app/core/

# Copy and setup entrypoint
COPY monolith/docker/entrypoint.sh /app/entrypoint.sh
RUN chmod +x /app/entrypoint.sh

EXPOSE 8000
ENTRYPOINT ["/app/entrypoint.sh"]
