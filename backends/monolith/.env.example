# .env.example - Template for .env file
# Copy this file to .env and fill in the values

# ==========================================
# BASIC DJANGO
# ==========================================
RBS_SECRET_KEY=your-secret-key-here
DEBUG=True

# ==========================================
# DATABASE
# ==========================================
RBS_PG_DATABASE=robsonbot_db
RBS_PG_USER=postgres
RBS_PG_PASSWORD=your-postgres-password
RBS_PG_HOST=localhost
RBS_PG_PORT=5432

# ==========================================
# BINANCE API
# ==========================================
# Testnet (development)
RBS_BINANCE_API_KEY_TEST=your-testnet-api-key
RBS_BINANCE_SECRET_KEY_TEST=your-testnet-secret-key

# Production (when implementing)
RBS_BINANCE_API_KEY=your-production-api-key
RBS_BINANCE_SECRET_KEY=your-production-secret-key

# Trading configuration
BINANCE_USE_TESTNET=True
TRADING_ENABLED=False

# ==========================================
# REDIS & CELERY (when implementing)
# ==========================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==========================================
# RABBITMQ (alternative to Redis for Celery)
# ==========================================
RABBITMQ_URL=amqp://guest:guest@localhost:5672//

# ==========================================
# MONITORING & ALERTS
# ==========================================
# Webhook for Slack/Discord (optional)
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/...

# Email configuration (for critical alerts)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# ==========================================
# TRADING SPECIFIC CONFIGURATION
# ==========================================
# Risk limits
MAX_POSITION_SIZE_PERCENT=5.0
MAX_DAILY_LOSS_PERCENT=10.0
DEFAULT_STOP_LOSS_PERCENT=2.0
DEFAULT_TAKE_PROFIT_PERCENT=4.0

# Timeouts and intervals
MARKET_DATA_CACHE_TIMEOUT=300
PRICE_UPDATE_INTERVAL=1
MAX_ORDERS_PER_MINUTE=10